apiVersion: v1
kind: Service
metadata:
  name: nginx
spec:
  selector:
    app: app1
  type: NodePort
  ports:
    - name: port1
      port: 80
      targetPort: 80
      nodePort: 31082
---
apiVersion: v1
kind: Pod
metadata:
  name: py
  labels:
    app: app1
spec:
  containers:
  - name: nginx
    image: nginx
    resources:
      limits:
        memory: "128Mi"
        cpu: "100m"
    ports:
    - containerPort: 80
